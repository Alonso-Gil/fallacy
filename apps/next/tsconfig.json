{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "images/*": ["../public/assets/images/*"]
    },
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "module": "esnext",              
    "moduleResolution": "bundler", 
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
